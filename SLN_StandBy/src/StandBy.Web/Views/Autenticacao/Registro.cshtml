@model StandBy.Web.DTOs.UsuarioRegistro;
@{

}



<vc:Summary></vc:Summary>
<div class="login-area">
  <form method="post" asp-action="Registro" class="">

    <h2 class="text-3xl  text-center">StandBy</h2>
    <p class="text-1xl  text-center">Crie uma nova conta.</p>
    <div class="form-group">
      <label class="form-label" for="username">
        E-mail
      </label>
      <input  id="username" type="text" placeholder="Username" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com">
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label class="form-label" for="password">
        Senha
      </label>
      <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true"
        placeholder="Senha" class="" id="password" type="password" placeholder="******************">
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <div class="form-group">
      <label class="form-label" for="password">
        Confirme a senha:
      </label>
      <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
        placeholder="Confirme a Senha" class="" id="password" type="password" placeholder="******************">
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>




    <div class="flex items-center justify-between">
      <button id="registerSubmit" class="btn btn-primary" type="submit">
        Salvar
      </button>
      <a asp-controller="Autenticacao" asp-action="Login" class="">
        JÃ¡ tem uma conta?
      </a>
    </div>
  </form>
</div>



@section Scripts {
  <partial name="_ValidationScriptsPartial" />

  <style>
    h2 {
      color: gray;
    }
  </style>
}
