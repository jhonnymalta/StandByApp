
@model StandBy.Web.DTOs.UsuarioRegistro;
@{
    
}



<div class="grid  md:grid-cols-1 lg:grid-cols-5 min-w-[40%] ">


<div class="lg:col-span-3">

</div>
  <form  method="post" asp-action="Registro"
   class=" w-full shadow-xl mt-[50%] bg-white shadow-md p-8 border rounded-2xl">
   <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
   <h2 class="text-3xl  text-center">StandBy</h2>
    <h2 class="text-1xl  text-center">Crie uma nova conta.</h2>
    <div class="mb-4">
      <label class="mt-8 block text-gray-700 text-sm font-bold mb-2" for="username">
        E-mail
      </label>
            <input
            class=" border-1 " id="username" type="text" placeholder="Username"
            asp-for="Email" class="control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com">
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>

<div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        Senha
      </label>
      <input
      asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Senha" 
       class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
      <p class="text-red-500 text-xs italic">Please choose a password.</p>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        Confirme a senha:
      </label>
      <input
     asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme a Senha" 
       class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
      <p class="text-red-500 text-xs italic">Please choose a password.</p>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>




    <div class="flex items-center justify-between">
      <button 
      id="registerSubmit" 
      class="bg-[#515151] hover:bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Salvar
      </button>
      <a 
       asp-area="Identity" asp-page="/Account/Login"
      class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" >
        JÃ¡ tem uma conta?
      </a>
    </div>
  </form>
  


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
