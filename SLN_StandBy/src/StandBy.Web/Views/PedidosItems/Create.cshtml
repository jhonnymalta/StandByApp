@model StandBy.Web.DTOs.PedidoItemDTO;
@{
    ViewData["Title"] = "Inserir no item";
    Layout = "_Layout_Loged";
}
<div>
    <h2 class="text-center">Cadastrar novo Item no Pedido @Model.Id</h2>
</div>
<div>
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-produtos">Produtos Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-produto">Cadastrar Novo Produto</a>
  </li>

</ul> 
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                 <input hidden asp-for="PedidoId" value="@Model.Id" name="PedidoId"/>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}

