@using StandBy.Web.Extensions
@inject IUser userApp;

<ul class="h-100">
@if (@userApp.isAuthenticated())
{
    <div class="flex">
    
        <a  class="text-light me-3 fw-bolder mt-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Usuário: @userApp.GetUserEmail()</a>
   
   
        <form  asp-controller="Autenticacao" asp-action="Logout" method="post" >
            <button  type="submit" class="">Logout</button>
        </form>
  
    </div>
}
else
{

    <div class="flex ">

    
    
        <a class="text-light me-3 fw-bolder mt-2 " asp-controller="Atenticacao" asp-action="Registro">Register</a>
    
    
        <a class="text-light me-3 fw-bolder mt-2 " asp-controller="Atenticacao" asp-action="Login">Login</a>
    
    </div>
}
</ul>
