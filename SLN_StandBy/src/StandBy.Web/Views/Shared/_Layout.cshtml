<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StandBy.Web</title>
    <link rel="stylesheet" href="~/StandBy.Web.styles.css" asp-append-ver@* *@sion="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @*<script src="https://cdn.tailwindcss.com"></script>*@
</head>

<body class="">



    <main role="main">
        @RenderBody()
    </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<style>
    body {
        background-color: #00a878;

    }

    main {

        height: 100vh;
        display: flex;
        align-items: center;
    }

    .login-area {
        background-color: white;
        width: 30%;
        margin-left: auto;
        margin-right: auto;
        margin-top: auto;
        margin-bottom: auto;
        border-radius: 11px;
        padding: 14px;
        box-shadow: .25rem .25rem .65rem rgba(1, 1, 1, .4);
    }
</style>
