@model StandBy.Web.DTOs.ClienteDTO
@{
    ViewData["Title"] = "Excluir cliente";
    Layout = "_Layout_Loged";
}

<div>
    <h2>Tem certeza que deseja excluir o produto @Model.Nome</h2>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </form>
    </div>
</div>

