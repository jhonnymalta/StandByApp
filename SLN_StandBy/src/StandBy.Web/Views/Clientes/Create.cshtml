@model StandBy.Web.DTOs.ClienteDTO;
@{
    ViewData["Title"] = "Novo Cliente";
    Layout = "_Layout_Loged";
}

<div>
    <h2 class="text-center">Lista de Clientes</h2>
</div>
<div >
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-clientes">Clientes Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-cliente">Cadastrar Novo Cliente</a>
  </li>

</ul> 
</div>
<div class="row mt-4">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"></input>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CpfCnpj" class="control-label"></label>
                <input asp-for="CpfCnpj" class="form-control"></input>
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                <input type="radio" asp-for="Ativo" name="status" value="Ativo">
                <label for="at">Ativo</label><br>
                <input type="radio" asp-for="Ativo" name="status" value="Inativo">
                <label for="css">Inativo</label><br>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                    <a class="btn btn-warning" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
