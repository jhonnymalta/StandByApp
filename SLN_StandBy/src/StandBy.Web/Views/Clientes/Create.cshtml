@model StandBy.Web.DTOs.ClienteDTO;
@{
    ViewData["Title"] = "Novo Cliente";
    Layout = "_Layout_Loged";
}

<div>
    <h2 class="text-center text-4xl text-gray-500 mb-8">Cadastrar novo Cliente.</h2>
</div>
<div >
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-clientes">Clientes Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-cliente">Cadastrar Novo Cliente</a>
  </li>

</ul> 
</div>
<div class="row mt-4">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span style="color:red">@ViewBag.country</span>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control "></input>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CpfCnpj" class="control-label"></label>
                <input asp-for="CpfCnpj" class="form-control cpfcnpj" data-mask="00/00/0000"></input>
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
                <div class="form-group flex items-center mb-4">
                <input class="mr-2" type="radio" asp-for="Ativo" name="status" value="Ativo">
                <label for="at" class="mr-4">Ativo</label><br>
                <input class="mr-2" type="radio" asp-for="Ativo" name="status" value="Inativo">
                <label for="css">Inativo</label><br>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Adicionar" class="text-white bg-green-500 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" />
                    <a class="text-white bg-red-500 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
    <script>
        $('.cpfcnpj').mask('000.000.000-00', { reverse: true });
    </script>
}
