@model List<StandBy.Web.DTOs.PedidoItemDTO>
@{
    ViewData["Title"] = "Descrição do Pedido";
    Layout = "_Layout_Loged";
    ViewBag.pedido = Url.ActionContext.RouteData.Values["id"];


}


<div>
    <h2 class="text-center text-4xl text-gray-500 mb-8">Descritivo do Pedido N°:   @Url.ActionContext.RouteData.Values["id"] </h2>
</div>
<div>
   <ul class="nav nav-tabs">
  <li class="nav-item">

  </li>
  <li class="nav-item">

  </li>
  </div>

<div>
    <a  asp-controller="PedidosItens" asp-action="Create" asp-route-id="@Url.ActionContext.RouteData.Values["id"]" class="btn btn-primary">Inserir um novo item</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produto</th>            
            <th scope="col">Quantidade</th>
            <th scope="col">Valor Unitário</th>
            <th scope="col">Valor Total</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
           <tr>
           <th scope="row">1</th>
           <td>@item.ProdutoID</td>
           <td>@item.Quantidade</td>
           <td>@item.ValorUnitario</td>
           <td>@item.ValorTotal</td>          
           <td>
              <a asp-controller="PedidosItens" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
           </td>
           </tr>
        }        

    </tbody>
</table>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
