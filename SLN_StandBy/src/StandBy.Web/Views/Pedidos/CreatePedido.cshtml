@model StandBy.Web.DTOs.PedidoDTO;
@{
    ViewData["Title"] = "Novo Produto";
    Layout = "_Layout_Loged";
}
<h1>Novo Produto</h1>
<div >
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-pedidos">Lista de Pedidos</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-pedido">Abrir um Novo Pedido</a>
  </li>

</ul> 
</div>
<div class="row mt-4">
    <div class="">
        <form asp-action="Create" >

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="  mb-4 ">
                <label class="mb-2">Selecione para qual cliente</label>
                <div class="d-flex flex-row ">
                <select asp-for="ClienteId" class="form-control me-2" style="width: 300px;">
                        @foreach (var item in @Model.ListaDeCliente)
                        {
                                <option asp-for="@Model.ClienteId" value="@item.Id">@item.Nome</option>

                        }
                </select>
                 
                <input type="submit" value="Abrir Pedido" class="btn btn-primary" />
                <a class="btn btn-danger ms-auto " asp-action="Index">Cancelar</a>
                
                </div>
            </div>


        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
