@model StandBy.Web.DTOs.ProdutoDTO
@{
    ViewData["Title"] = "Excluir Produto";
    Layout = "_Layout_Loged";
}

<div>
    <h2 class="text-center text-gray-500 text-2xl mb-4">Tem certeza que deseja excluir o produto: <span class="text-3xl font-bold">@Model.Descricao</span></h2>
    <div>
        <form asp-controller="Produtos" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="text-center">
            <input type="hidden" asp-for="Id"  class="mt-4"/>
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </form>
    </div>
</div>





