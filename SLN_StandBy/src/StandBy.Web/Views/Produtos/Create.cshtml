@model StandBy.Web.DTOs.ProdutoDTO;
@{
    ViewData["Title"] = "Novo Produto";
    Layout = "_Layout_Loged";
}
<div>
    <h2 class="text-center">Cadastrar Novo Produto</h2>
</div>
<div>
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-produtos">Produtos Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-produto">Cadastrar Novo Produto</a>
  </li>

</ul> 
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="  form-control bg-gray-200 border border-gray-300 text-gray-900 rounded-lg pl-4"></input>
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control bg-gray-200 border border-gray-300 text-gray-900 rounded-lg pl-4"></input>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="QuantidadeEstoque" class="control-label"></label>
                    <input asp-for="QuantidadeEstoque" class="form-control bg-gray-200 border border-gray-300 text-gray-900 rounded-lg pl-4"></input>
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class=" form-control bg-gray-200 border border-gray-300 text-gray-900 rounded-lg pl-4"></input>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>  
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
