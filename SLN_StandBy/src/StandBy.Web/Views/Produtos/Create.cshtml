@model StandBy.Web.DTOs.ProdutoDTO;
@{
    ViewData["Title"] = "Novo Produto";
    Layout = "_Layout_Loged";
}
<div>
    <h2 class="text-center text-4xl text-gray-500 mb-8">Cadastrar Novo Produto</h2>
</div>
<div>
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="lista-de-produtos">Produtos Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="novo-produto">Cadastrar Novo Produto</a>
  </li>

</ul> 
</div>
<div class="row">
    <vc:Summary></vc:Summary>
    <div class="col-md-4">
        <form asp-action="Create">
            <span style="color:red">@ViewBag.country</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class=" form-control codigo"></input>
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control"></input>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="QuantidadeEstoque" class="control-label"></label>
                    <input asp-for="QuantidadeEstoque" class="form-control"></input>
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                <input type="number" step="any" asp-for="Valor" class=" form-control money"></input>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>  
                <div class="form-group mt-4">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script>
            $('.money').mask("###0.00", { reverse: true });
            $('.codigo').mask("999-99999", { reverse: true });
    </script>

}}
