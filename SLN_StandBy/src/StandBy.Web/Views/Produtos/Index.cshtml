@model IEnumerable<StandBy.Web.DTOs.ProdutoDTO>
@{
    ViewData["Title"] = "Lista de Produto";
    Layout = "_Layout_Loged";
}

<div>
    <h2 class="text-center">Lista de Produtos</h2>
</div>
<div>
   <ul class="nav nav-tabs ">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="lista-de-produtos">produtos Cadastrados</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="novo-produto">Cadastrar Novo Produto</a>
  </li>

</ul> 
</div>

<table class="table  ">
    <thead>
        <tr>
            <th scope="col">Imagem</th>
            <th scope="col">Código</th>            
            <th scope="col">Descrição</th>
            <th scope="col">Valor Unidade</th>
            <th scope="col">Ações</th>
           
        </tr>
    </thead>
    
    <tbody >
        @foreach (var item in Model)
        {
            <tr>
            <th scope="row"><img class="" src="~/images/ImagemNotProduct.jpg" width="80" height="80" alt="Card image cap"></th>
            <td class="align-bottom">@item.Codigo</td>
            <td class="align-bottom  text-wrap w-50">@item.Descricao</td>
            <td class="align-bottom">@item.Valor</td>
            
            <td class="align-bottom">
                    <a asp-controller="Produdos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
            </tr>
        }        
        
      
    </tbody>

   
    </table>
 
