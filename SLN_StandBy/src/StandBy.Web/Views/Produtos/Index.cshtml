@model IEnumerable<StandBy.Web.DTOs.ProdutoDTO>
@{
    ViewData["Title"] = "Lista de Produto";
    Layout = "_Layout_Loged";
}

<div>
    <h2>Lista de Produtos</h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Código</th>
            <th scope="col">Descrição</th>
            <th scope="col">Quantidade Estoque</th>
            <th scope="col">Valor</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <th scope="row">1</th>
            <td>@item.Codigo</td>
            <td>@item.Descricao</td>
            <td>@item.QuantidadeEstoque</td>
            <td>@item.Valor</td>
            <td>
                    <a asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
            </tr>
        }        
        
      
    </tbody>
</table>
