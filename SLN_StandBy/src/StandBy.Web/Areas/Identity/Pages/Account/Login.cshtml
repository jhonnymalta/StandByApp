@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}







<div class="grid  md:grid-cols-1 lg:grid-cols-5 min-w-[40%] ">


<div class="lg:col-span-3">

</div>
  <form 
   class="w-full shadow-xl mt-[50%] bg-white shadow-md p-8 border rounded-2xl"
  id="account" method="post">
                <h2 class="text-center text-2xl mb-4">Faça seu login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="my-4 ">
                    <input asp-for="Input.Email" class="" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                    <label asp-for="Input.Email" class="">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="my-4">
                    <input asp-for="Input.Password" class="" autocomplete="current-password" aria-required="true" placeholder="Senha" />
                    <label asp-for="Input.Password" class="">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="">
                        <input class="form-check-input" asp-for="Input.RememberMe" value="Lembrar-me?" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 bg-[#515151] text-white px-4 py-2 rounded-md ">Entrar</button>
                </div>
                <div>
                    
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Entre com um novo usuário</a>
                    </p>
                    
                </div>
            </form>
  


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}










